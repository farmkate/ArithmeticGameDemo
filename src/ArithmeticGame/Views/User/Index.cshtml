@model List<ArithmeticGame.Models.User>
    

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No users yet!</p>
}

<table class="table">

    <tr>
        <th>Username</th>
        <th>Email</th>
        <td>Category</td>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.Category.Name</td>
        </tr>
    }
</table>

<p>
    <a asp-controller="User" asp-action="Add">Add</a>
</p>
